<yas>
	<scene root="universe" axis_length="15.0" />

	<views default="frustum">
		<perspective id="frustum" near="0.1" far="500.0" angle="20"> <!-- angle in radians -->
			<from x="50.0" y="50.0" z="50.0" />
			<to x="5.0" y="5.0" z="5.0" />
		</perspective>
		<!-- <ortho id="ss" near="ff" far="ff" left="ff" right="ff" top="ff" bottom="ff" /> -->
	</views>

	<ambient>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0" g="0" b="0" a="1" />
	</ambient>

	<lights>
		<omni id="sun" enabled="1"> <!-- top, center light -->
			<location x="25.0" y="45.0" z="25.0" w="1" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.1" g="0.1" b="0.1" a="1" />
		</omni>

		<!-- 4 spotlights at the top, stadium-like -->
		<spot id="spotlight1" enabled="1" angle="20" exponent="1"> <!-- origin -->
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<spot id="spotlight2" enabled="1" angle="20" exponent="1"> <!-- xy plane, right -->
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<spot id="spotlight3" enabled="1" angle="20" exponent="1"> <!-- yz plane, left -->
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<spot id="spotlight4" enabled="1" angle="20" exponent="1"> <!-- bissection -->
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>
	</lights>

	<textures>
		<texture id="teddyFur" file="images/teddy.jpg" />

		<texture id="teddyEyes" file="images/teddy_eyes.jpg" />

		<texture id="teddyNose" file="images/teddy_nose.jpg" />

		<texture id="teddyMouth" file="images/teddy_mouth.jpg" />
		
		<texture id="beer" file="images/beer.jpg" />
	</textures>

	<materials>
		<!-- a default material -->
		<material id="defaultMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.4" g="0.4" b="0.4" a="1" />
			<diffuse r="0.4" g="0.4" b="0.4" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<!-- material for spotlights -->
		<material id="lightMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.4" g="0.4" b="0.4" a="1" />
			<diffuse r="0.4" g="0.4" b="0.4" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<!-- Teddy materials -->
		<material id="teddyBodyMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.886" g="0.588" b="0.145" a="1" />
			<diffuse r="0.886" g="0.588" b="0.145" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<material id="teddyFeaturesMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="0" g="0" b="0" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>
	</materials>

	<transformations>
		<transformation id="ss">
			<translate x="ff" y="ff" z="ff" />
			<rotate axis="cc" angle="ff" />
			<scale x="ff" y="ff" z="ff" />
		</transformation>
	</transformations>

	<primitives>
		<primitive id="ss">
			<rectangle x1="ff" y1="ff" x2="ff" y2="ff" />
			<triangle x1="ff" y1="ff" z1="ff" x2="ff" y2="ff" z2="ff" x3="ff" y3="ff" z3="ff" />
			<cylinder base="ff" top="ff" height="ff" slices="ii" stacks="ii" />
			<sphere radius="ff" slices="ii" stacks="ii" />
			<torus inner="ff" outer="ff" slices="ii" loops="ii" />
		</primitive >
	</primitives >

	<components>
		<component id="ss">
			<transformation>
				<transformationref id="ss" />
				<translate x="ff" y="ff" z="ff" />
				<rotate axis="cc" angle="ff" />
				<scale x="ff" y="ff" z="ff" />
			</transformation>
			<materials>
				<material id="ss" />
			</materials>
			<texture id="ss" length_s="ff" length_t="ff" />
			<children>
				<componentref id="ss" />
				<primitiveref id="ss" />
			</children>
		</component>
	</components>
</yas>
