<yas>
	<scene root="universe" axis_length="15.0" />

	<views default="frustum">
		<perspective id="frustum" near="0.1" far="500.0" angle="20"> <!-- angle in degrees (?) -->
			<from x="50.0" y="50.0" z="50.0" />
			<to x="5.0" y="5.0" z="5.0" />
		</perspective>
		<ortho id="ss" near="ff" far="ff" left="ff" right="ff" top="ff" bottom="ff" />
	</views>

	<ambient>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0" g="0" b="0" a="1" />
	</ambient>

	<lights>
		<omni id="sun" enabled="1"> <!-- top, center light -->
			<location x="25.0" y="45.0" z="25.0" w="1" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.1" g="0.1" b="0.1" a="1" />
		</omni>

		<!-- 4 spotlights at the top, stadium-like -->
		<!-- origin -->
		<spot id="spotlight1" enabled="1" angle="20" exponent="1">
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<!-- xy plane, right -->
		<spot id="spotlight2" enabled="1" angle="20" exponent="1">
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<!-- yz plane, left -->
		<spot id="spotlight3" enabled="1" angle="20" exponent="1">
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>

		<!-- bissection -->
		<spot id="spotlight4" enabled="1" angle="20" exponent="1">
			<location x="0" y="45" z="0" w="1" />
			<target x="25" y="0" z="25" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="0.5" g="0.5" b="0.5" a="1" />
			<specular r="0.3" g="0.3" b="0.3" a="1" />
		</spot>
	</lights>

	<textures>
		<texture id="floorTexture" file="images/floor.jpg"/>

		<texture id="teddyFur" file="images/teddy.jpg" />

		<texture id="teddyEyes" file="images/teddy_eyes.jpg" />

		<texture id="teddyNose" file="images/teddy_nose.jpg" />

		<texture id="teddyMouth" file="images/teddy_mouth.jpg" />

		<texture id="teddyMuzzle" file="images/teddy_muzzle.jpg" />
		
		<texture id="beer" file="images/beer.jpg" />
	</textures>

	<materials>
		<!-- default material -->
		<material id="defaultMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.4" g="0.4" b="0.4" a="1" />
			<diffuse r="0.4" g="0.4" b="0.4" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<!-- floor material -->
		<material id="floorMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.568" g="0.729" b="0.690" a="1" />
			<diffuse r="0.568" g="0.729" b="0.690" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<!-- spotlight material -->
		<material id="lightMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.4" g="0.4" b="0.4" a="1" />
			<diffuse r="0.4" g="0.4" b="0.4" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<!-- Teddy materials -->
		<material id="teddyBodyMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0.886" g="0.588" b="0.145" a="1" />
			<diffuse r="0.886" g="0.588" b="0.145" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>

		<material id="teddyFeaturesMaterial" shininess = "1">
			<emission r="0" g="0" b="0" a="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="0" g="0" b="0" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</material>
	</materials>

	<transformations>
		<transformation id="floorPositioning">
			<translate x="25" y="0" z="25" />
			<scale x="50" y="1" z="50" />
			<rotate axis="x" angle="90" />
		</transformation>

		<transformation id="teddyPositioning">
			<translate x="25" y="0.1" z="25" />
		</transformation>
	</transformations>

	<primitives>
		<primitive id="rectanglePrimitive">
			<rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
		</primitive>

		<primitive id="spherePrimitive">
			<sphere radius="1" slices="20" stacks="20" />
		</primitive >
		
		<primitive id="trianglePrimitive">
			<triangle x1="-0.5" y1="-0.433" z1="0" x2="0.5" y2="-0.433" z2="0" x3="0" y3="0.433" z3="0" />
		</primitive >
		
		<primitive id="cylinderPrimitive">
			<cylinder base="1" top="1" height="1" slices="20" stacks="20" />
		</primitive >
	</primitives >

	<components>
		<component id="universe">
			<transformation>
			</transformation>
			<materials>
				<material id="defaultMaterial" />
			</materials>
			<texture id="none" length_s="1" length_t="1" />
			<children>
				<componentref id="floor" />
				<componentref id="teddy" />
			</children>
		</component>
		
		<component id="floor">
			<transformation>
				<transformationref id="floorPositioning" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="floorTexture" length_s="1" length_t="1" />
			<children>
				<primitiveref id="rectanglePrimitive" />
			</children>
		</component>
		
		<component id="teddy">
			<transformation>
				<transformationref id="floorPositioning" />
			</transformation>
			<materials>
				<material id="teddyBodyMaterial" />
			</materials>
			<texture id="teddyFur" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyHead" />
				<componentref id="teddyBody" />
			</children>
		</component>

		<!-- head -->

		<component id="teddyHead">
			<transformation>
				<translate x="0" y="17" z="0" /> <!-- half the feet, leg and torso sizes, with 2 deducted for continuity (torso and legs) -->
			</transformation>
			<materials>
			</materials>
			<texture id="teddyFur" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyFace" />
				<componentref id="teddyEars" />
			</children>
		</component>

		<!-- head > face + ears -->

		<component id="teddyFace">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyEyes" />
				<componentref id="teddyEyebrows" />
				<componentref id="teddyMuzzle" />
			</children>
		</component>

		<component id="teddyEars">
			<transformation>
				<translate x="-1,75" y="22" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<!-- head > face > eyes + eyebrows + muzzle -->

		<component id="teddyEyes">
			<transformation>
				<translate x="-1,4" y="21,25" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="teddyEyes" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<component id="teddyEyebrows">
			<transformation>
				<translate x="-1,75" y="21,75" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="rectangulePrimitive" />
			</children>
		</component>

		<component id="teddyMuzzle">
			<transformation>
				<translate x="0" y="18,5" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="teddyMuzzle" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyNose" />
				<componentref id="teddyMouth" />
			</children>
		</component>

		<!-- head > face > muzzle > nose + mouth -->

		<component id="teddyNose">
			<transformation>
				<translate x="0" y="18,875" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="teddyNose" length_s="1" length_t="1" />
			<children>
				<primitiveref id="triangulePrimitive" />
			</children>
		</component>

		<component id="teddyMouth">
			<transformation>
				<translate x="0" y="17,875" z="0" />
			</transformation>
			<materials>
			</materials>
			<texture id="teddyMouth" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<!-- body -->

		<component id="teddyBody">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="teddyFur" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyUpperbody" />
				<componentref id="teddyLowerbody" />
			</children>
		</component>

		<!-- body > upperbody + lowerbody -->

		<component id="teddyUpperbody">
			<transformation>
				<translate x="0" y="5" z="0" /> <!-- half the feet and legs, with 1 deducted for continuity -->
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyArms" />
				<componentref id="teddyTorso" />
				<componentref id="teddyCoccix" />
			</children>
		</component>

		<component id="teddyLowerbody">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyLegs" />
				<componentref id="teddyFeet" />
			</children>
		</component>

		<!-- body > upperbody > arms + torso + coccix -->

		<component id="teddyArms">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<component id="teddyTorso">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<component id="teddyCoccix">
			<transformation>
				<translate x="0" y="-5" z="0" /> <!-- half the torso size -->
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<componentref id="teddyPyramid" />
			</children>
		</component>

		<!-- body > upperbody > coccix > pyramid -->

		<component id="teddyPyramid">
			<transformation>
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="triangulePrimitive" />
			</children>
		</component>

		<!-- body > lowerbody > legs + feet-->

		<component id="teddyLegs">
			<transformation>
				<translate x="0" y="5" z="0" /> <!-- half the feet and leg sizes -->
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>

		<component id="teddyFeet">
			<transformation>
				<translate x="0" y="1" z="0" /> <!-- half a foot size -->
			</transformation>
			<materials>
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="spherePrimitive" />
			</children>
		</component>
	</components>
</yas>
